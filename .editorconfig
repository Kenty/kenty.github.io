#editorconfig
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[*.{markdown, md}]
indent_style = tab
indent_size = 1
trim_trailing_whitespace = false

[*.php]
indent_style = tab
indent_size = 2

[*.inc]
indent_style = tab
indent_size = 2

[*.json]
indent_style = space
trim_trailing_whitespace = false
